<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".nouprv.NoUpLoadActivity"
    android:background="@drawable/base_black_bg"
    android:paddingTop="@dimen/size_20dp"
    >
    <com.ljg.guiderecycleview.customview.pullrefresh.PullToRefreshLayout
        android:id="@+id/refreshView_video"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_marginTop="16dp"
        android:layout_marginBottom="16dp"
        android:layout_marginLeft="16dp"
        android:layout_marginRight="16dp">

        <com.ljg.guiderecycleview.customview.pullrefresh.PullRecyclerView
            android:id="@+id/lv_content"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:divider="#1E2024" />
    </com.ljg.guiderecycleview.customview.pullrefresh.PullToRefreshLayout>
</LinearLayout>